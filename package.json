    "scripts": {
        "build:client": "cd client && node ../node_modules/webpack/bin/webpack --watch",
        "build:server": "cd server && node ../node_modules/typescript/bin/tsc --watch",
        "dev": "run-p dev:client dev:server",
        "dev:client": "yarn build:client",
        "dev:server": "run-s build:server start:server",
        "start:server": "cd server && node ../node_modules/nodemon/bin/nodemon.js ./dist/index.js"
    },
    "devDependencies": {
        "@types/express": "^4.16.0",
        "@types/react": "^16.7.18",
